@model mock2.Models.BloodDonor

<form asp-action="Edit" asp-controller="BloodDonor" method="post">
    <div class="form-group">
        <label asp-for="ID"></label>
        <input asp-for="ID" readonly>
    </div>
    <br>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name">
    </div>
    <br>
    <div class="form-group">
        <label asp-for="DOB"></label>
        <input asp-for="DOB">
    </div>
    <br>
    <div class="form-group">
        <label asp-for="BloodGroup"></label><br>
        <select asp-for="BloodGroup" class="form-select" readonly>
            <option selected>Select Blood Group</option>
            <option value="b+">B+</option>
            <option value="o+">O+</option>
            <option value="a-">A-</option>
        </select>
    </div>
    <br>
    <div class="form-group">
        <label asp-for="MobileNumber"></label>
        <input asp-for="MobileNumber">
    </div>
    <br>
    <div class="form-group">
        <label asp-for="Gender"></label>
        <input asp-for="Gender">
    </div>
    <br>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email">
    </div>
    <br>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location">
    </div>
    <br>
    <div class="form-group">
        <input type="submit" value="Edit">
    </div>
    
    

</form>